<Window x:Class="CryptoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryptoApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button x:Name="HomePageButton" Content="HOME" Height="35" MinWidth="100" Margin="5,5,5,5" Click="HomePage_Click"></Button>
            <Button x:Name="Page2" Content="Page2" Height="35" MinWidth="100" Margin="5,5,5,5" Click="Page2_Click"></Button>
            <Button x:Name="Page3" Content="Page3" Height="35" MinWidth="100" Margin="5,5,5,5" Click="Page3_Click"></Button>
            <TextBox x:Name="SearchBox" Width="300" Height="30"  Margin="40,0,5,0" VerticalAlignment="Center">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>
                </TextBox.Style>
            </TextBox>
            <Button x:Name="SearchButton" Content="Search" Height="35" MinWidth="100" Margin="5"></Button>
        </StackPanel>
        <Frame x:Name="MyFrame" Grid.Row="1" Background="AliceBlue" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
